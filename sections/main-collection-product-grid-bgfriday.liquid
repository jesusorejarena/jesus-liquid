{{ 'template-collection.css' | asset_url | stylesheet_tag }}
{{ 'component-card.css' | asset_url | stylesheet_tag }}
{{ 'component-price.css' | asset_url | stylesheet_tag }}

<style>
  .product-card-image {
    width: 40;
    height: 40;
  }

  .flex-col {
    display: flex;
    flex-direction: column;
  }

  .decoration-none {
    text-decoration: none;
    color: black;
  }

	.tag {
	  display: flex;
		width: 40%;
		flex-direction: row;
		justify-content: center;
		align-items: center;
		background-color: #e60000;
		padding: 3 3 3 3;
		color: white;
    border-radius: 5px;
	}
</style>

<div class="section-{{ section.id }}-padding gradient color-{{ section.settings.color_scheme }}">
  {%- paginate collection.products by section.settings.products_per_page -%}
    <div class="{% if section.settings.filter_type == 'vertical' %} facets-vertical page-width{% endif %}">
      <div
        class="product-grid-container{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
        id="ProductGridContainer"
        {% if settings.animations_reveal_on_scroll %}
          data-cascade
        {% endif %}
      >
        <div class="collection{% if section.settings.filter_type != 'vertical' %} page-width{% endif %}">
          <div class="loading-overlay gradient"></div>
          <ul
            id="product-grid"
            data-id="{{ section.id }}"
            class="
              grid product-grid grid--{{ section.settings.columns_mobile }}-col-tablet-down
              grid--{{ section.settings.columns_desktop }}-col-desktop
            "
          >
            {%- for product in collection.products -%}
              <a
                href="{{ product.url }}"
                class="grid__item{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %} decoration-none"
              >
                <li
                  class="flex-col"
                >
                  <img
                    src="{{ product.featured_media | image_url: width: 533 }}"
                    sizes="(min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 130 | divided_by: 4 }}px, (min-width: 990px) calc((100vw - 130px) / 4), (min-width: 750px) calc((100vw - 120px) / 3), calc((100vw - 35px) / 2)"
                    alt="{{ product.featured_media.alt | escape }}"
                    class="motion-reduce"
                    width="250"
                    height="250"
                  >

                  <h4>{{ product.title }}</h4>
                  <h4>{{ product.options_with_values | json }}</h4>

                  {% render 'price', product: card_product, price_class: '', show_compare_at_price: true %}

                  {% if product.available %}
                    <p>
                      Tallas disponibles:
                      {%- for variant in product.variants %}
                        {% if variant.available %}
                          {{ variant.option1 }},
                        {% endif %}
                      {% endfor %}
                    </p>
                  {% else %}
                    <p>Producto no disponible</p>
                  {% endif %}

                  {% assign unique_colors = '' | split: ',' %}
                  {% for variant in product.variants %}
                    {% if variant.available %}
                      {% unless unique_colors contains variant.option2 %}
                        {% assign unique_colors = unique_colors | append: variant.option2 | append: ',' %}
                      {% endunless %}
                    {% endif %}
                  {% endfor %}

                  {% if product.available and product.variants.first.inventory_quantity < 5 %}
                    <div class="tag">Last Items</div>
                  {% endif %}

                  {% for color in unique_colors %}
                    <p>Color: {{ color | remove: '[' | remove: ']' }}</p>
                  {% endfor %}
                </li>
              </a>
            {%- endfor -%}
          </ul>
        </div>
      </div>
      {%- if paginate.pages > 1 -%}
        {% render 'pagination', paginate: paginate, anchor: '' %}
      {%- endif -%}
    </div>
  {%- endpaginate -%}
</div>

{% schema %}
{
  "name": "t:sections.main-collection-product-grid.name",
  "class": "section",
  "settings": [
    {
      "type": "range",
      "id": "products_per_page",
